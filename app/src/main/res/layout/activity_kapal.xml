<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etKapasitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan kapasitas kapal"
            android:inputType="number" />

        <EditText
            android:id="@+id/etSlotTruk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasitas truk (contoh: 5)"
            android:inputType="number" />

        <EditText
            android:id="@+id/etSlotMobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasitas mobil (contoh: 2)"
            android:inputType="number" />

        <EditText
            android:id="@+id/etSlotMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasitas motor (contoh: 1)"
            android:inputType="number" />

        <Button
            android:id="@+id/btnSetKapasitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Kapasitas" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/kapal"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tvKapasitas"
            android:text="Sisa Kapasitas: 100 slot"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnMotor"
            android:text="Tambah Motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnMobil"
            android:text="Tambah Mobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnTruk"
            android:text="Tambah Truk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvJumlah"
            android:text="Motor: 0 | Mobil: 0 | Truk: 0"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLihatSusunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Susunan Kapal" />

    </LinearLayout>
</ScrollView>
